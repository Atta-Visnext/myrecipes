<%= render 'shared/errors' , obj: @recipe %>

<div class = "row">
	<div class="col-md-12">
		<%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>

			<div class="form-group">
				<div class="control-label col-md-2">
					<%= f.label :name %>
				</div>
				<div class="col-md-8">
					<%= f.text_field :name, class: "form-control", placeholder: "Name of the recipe", autofocus: true %>
				</div>

				<div class="form-group">
					<div class="control-label col-md-2 ">
						 <%= f.label :description %>
					</div>
					<div class="col-md-8">
						<%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter steps to create recipe" %>
					</div>
				</div>
			</div>  

			<div class="form-group  p-3">
				<div class="col-md-offset-2 col-md-10">
					<%= f.submit class: "btn btn-primary btn-lg btn-xlarge" %>
				</div>
			</div>
		<% end %>
		<div class=" center col-md-4=8 col-md-offset-16 colormatch ">
			[<%= link_to "cancel request and return to recipes building", recipes_path %>]
		</div>
	</div>
</div>
