<%= render 'shared/pages_title', title: "Available Ingredients" %>

<div align="center">
	<%= will_paginate %>
	<% @ingredients.each do |ing| %>
		<ul class="listing">
			<div class="row bg-light p-5 ">
				<div class="well col-md-16 col-md-offset-2 ">
					<li class= " chef-title"><%= link_to ing.name.capitalize , ingredient_path(ing) %></li>
					<li><small><%= pluralize(ing.recipes.count, "recipe") if ing.recipes %></small></li>
					
					<% if logged_in? && current_chef.admin?  %>
						<li><%=  link_to "Edit this ingredients", edit_ingredient_path(ing)%></li>	
					<% end %>		
				</div>
				
			</div>
			
		</ul>

	<% end %>
	<%= will_paginate %>
</div>